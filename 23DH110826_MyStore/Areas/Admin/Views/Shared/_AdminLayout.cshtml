
<style>

    /* CONTAINER BOX */

    .container-box
    {
        min-height : 100vh;
    }

    /* Container Left Side */
    

    .container-left-side {
        flex: 0.1;
        padding : 10px 50px;
        box-sizing : border-box;
        box-shadow : 0px 0px 5px 0px black;
    }

    .container-left-side a
    {
        width : 90px;
    }

    /* Container Right Side */

    .container-right-side
    {
        flex : 1.8;
    }

    /* Container Right Side Header */

    header {
        position: relative;
        background: #20222A;
        height : 60px;
        margin-bottom : 20px;
    }

    /* Container Right Side Icon Left */

    .container-right-side-icon-left
    {
        padding : 10px;
    }

    /* ICON */

    header i {
        top : 25px;
        position: absolute;
        color : white;
    }

    #container-right-side-icon-left-menu
    {
        left : 40px;
    }

    #container-right-side-icon-left-bell
    {
        left : 80px;
    }

    #container-right-side-icon-right-user
    {
        right : 80px;
    }

    /* Container Right Side Content */

    .container-right-side-content{
        margin-left : 40px;
    }

    
</style>


<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <script src="https://kit.fontawesome.com/131e0ec2d1.js" crossorigin="anonymous"></script>

</head>
<body>
    <div class="container-box d-flex">
        <div class="container-left-side d-flex flex-column">
            @Html.ActionLink("Category", "CategoryHome", "Category" , new { @class = "p-2 a mt-4 mb-4 text-light bg-info text-decoration-none d-flex justify-content-center align-items-center" })
            @Html.ActionLink("Product" , "" , "" , new {@class = "mt-4 mb-4 text-decoration-none text-light bg-info p-2 d-flex justify-content-center align-items-center" })
        </div>

        <div class="container-right-side">
            <header class="d-flex justify-content-between align-items-center">
                <div class="container-right-side-icon-left">
                    <i id ="container-right-side-icon-left-menu" class="fa-solid fa-bars"></i>
                    <i id ="container-right-side-icon-left-bell" class="fa-solid fa-bell"></i>
                </div>

                <div class="container-right-side-icon-right">
                    <i id ="container-right-side-icon-right-user" class="fa-solid fa-user"></i>
                </div>
            </header>

            <div class="container-right-side-content">
                @RenderBody()
            </div>
        </div>
    </div>
</body>
</html>
